@model CrowdfundingWeb.Models.CreatorListModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "My Profile";
    //CrowdfundingWeb.Models.CreatorListModel;

}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>

<div class="container">
    <main>
        <h1>
            List of Creators
        </h1>
        <table id="creator-table" class="table table-striped table-dark">
            <thead>
                <tr>
                    <th style="width: 5%" scope="col">#</th>
                    <th style="width: 20%" scope="col">Username</th>
                    <th style="width: 25%" scope="col">Email</th>
                    <th style="width: 50%" scope="col">Biography</th>
                </tr> 
            </thead>
            <tbody>
                @{
                    foreach (var creator in Model.Creators)
                    {
                        <tr>
                            <td> @creator.Id</td>
                            <td> @creator.Username</td>
                            <td> @creator.Email </td>
                            <td> @creator.Bio </td>
                        </tr>
                    }
                }
            </tbody>
        </table>


        <!-- Progress -->

    </main>


    <div id="sidebar">
        <a class="nav-link active text-light" asp-area="" asp-controller="Home" asp-action="CreateProfile"><h4>My Profile</h4></a>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><h4>Create New Project</h4></a>
        <h4>My Projects</h4>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>   <!-- Edit the right controllers -->
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Project 1</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Project 2</a>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Project 3</a>
    </div>
</div>