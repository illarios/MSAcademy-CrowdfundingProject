@{
    ViewData["Title"] = "Home";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>

<div class="container">
    <main>
        <h1>
            Dashboard
        </h1>
        <div class="card border-left-primary shadow  py-2" style="background-color:#e9f1f7">
            <div class="card-body">

                <div class="text-xs font-weight-bold text text-uppercase mb-1" style="color:#2c4a58">Name of Project <span class="badge badge-success">New</span></div>  <!-- Make it pop up only for new ones -->
                <div class="h5 mb-0 font-weight-bold text" style="color:#2c4a58">People Backing You Up: js </div>
                <div class="h5 mb-0 font-weight-bold text" style="color:#2c4a58">End Date : js date </div>
                <div class="h5 mb-0 font-weight-bold text" style="color:#2c4a58">Current Amount : js € </div>
                <!-- Progress -->
                <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Goal Completion: js %</div>

                <div class="progress">
                    <div id="one" class="progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width:80%;background-color:#2c4a58;">
                    </div>
                </div>
                <!-- Progress -->

            </div>
        </div>
    </main>
    <div id="sidebar">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="CreateProfile"><h4>My Profile</h4></a>
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><h4>Create New Project</h4></a>
            <h4>My Projects</h4>
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>   <!-- Edit the right controllers -->
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Project 1</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Project 2</a>
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="CreateProfile">Project 3</a>

            <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" asp-action="CreateProfile" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
            <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Profile</a>
            <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Messages</a>
            <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</a>
        </div>
    </div>
</div>