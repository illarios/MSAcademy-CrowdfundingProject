@{
    ViewData["Title"] = "Home";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/BackerProject.css" />

</head>
<div class="container">
    <main>
        <h1>Project Name</h1>
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1" class="active"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="back" src="~/images/LampSpeaker-2.jpg" alt="First Image">
                    <div class="carousel-caption d-md-block">
                        <h5>First Image</h5>
                    </div>
                </div>
                <div class="carousel-item activte">
                    <img class="back" src="~/images/LampSpeaker.jpg" alt="Second Image">
                    <div class="carousel-caption d-md-block">
                        <h5>Second Image</h5>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="container">
            <div class="position-absolute" style="margin-top: 5%;">
                <div class="col-md-4">
                    <h2>Description</h2>
                    <p>
                        ................................................................................................................
                        ................................................................................................................
                        ................................................................................................................
                    </p>
                    <button id="amount" type="button" class="btn btn-dark">Support The Project</button>
                </div>
            </div>
        </div>
    </main>
    <div class="navbar" id="sidebar">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-ligh" asp-area="" asp-controller="Home" asp-action="Index"><h4>Home</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Dashboard"><h4>Dashboard</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-light" asp-area="" asp-controller="Home" asp-action="CreateProfile"><h4>My Profile</h4></a>
            </li>
            <li class="nav-item">
                <h4>My Projects</h4>
            </li>
        </ul>
    </div>
</div>


