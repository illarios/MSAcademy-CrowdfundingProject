@model CrowdfundingWeb.Models.ProjectListModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Creator Dashboard";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>

<div class="container">
    <main>
        <h1>
            Dashboard <!-- Show my projects  -->
        </h1>
        @{
            foreach (var project in Model.Projects)
            {
                <div class="card border-left-primary shadow  py-2" style="background-color:#e9f1f7">
                    <div class="card-body">

                        <div class="text-xs font-weight-bold text text-uppercase mb-1" style="color:#2c4a58"> @project.Title <span class="badge badge-success">New</span></div>  <!-- Make it pop up only for new ones -->
                        <div class="h5 mb-0 font-weight-bold text" style="color:#2c4a58">People Backing You Up: project.Backers.Count() </div>
                        <div class="h5 mb-0 font-weight-bold text" style="color:#2c4a58">End Date : @project.EndDate </div>
                        <div class="h5 mb-0 font-weight-bold text" style="color:#2c4a58">Current Amount : @project.CurrentAmount € </div>
                        <!-- Progress -->
                        <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Goal Completion: @project.Progress %</div>

                        <div class="progress">
                            <div id="one" class="progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@project.Progress" aria-valuemin="0" aria-valuemax="100" style="width:@project.Progress;background-color:#2c4a58;">
                            </div>
                        </div>
                        <!-- Progress -->

                    </div>
                </div>
            }
        }

    </main>
    <div class="navbar" id="sidebar">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><h4>Home</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="CreatorMenu" asp-action="CDashboard"><h4>Dashboard</h4></a>
            </li>
            <li class="nav-item">
                <a id="my-profile" class="nav-link active text-light" asp-area="" asp-controller="CreatorMenu" asp-action="EditProfile"><h4>My Profile</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-light" asp-area="" asp-controller="CreatorMenu" asp-action="CreatorProjects"><h4>Create New Project</h4></a>
            </li>
        </ul>
    </div>
</div>