@model CrowdfundingWeb.Models.ProjectWithBundlesModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Browse created projects";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/BackerProject.css" />
</head>
     <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo-light.png"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>     
                              <li class="nav-item">
                                <a class="nav-link text-light" id="creator-dashboard">Dashboard</a>
                              </li>
                              <li class="nav-item">
                                  <a id="my-profile" class="nav-link active text-light">My Profile</a>
                              </li>
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="CreatorMenu" asp-action="CreatorProjects">Create New Project</a>
                            </li>
                            <li class="nav-item ml-auto">
                                 <a id="logout-btn"  class="nav-link text-light" style="display:none">Logout</a> 
                            </li>
                        </ul>                   
                    </div>
                    
                </div>
                
            </nav>

<div class="container">
    <main>
        <h1>@Model.Title</h1>
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1" class="active"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="back" src="/uploadedimages/@Model.PicturePath" width="850" height="400" alt="First Image">
                </div>
            </div>
            <!-- Controls -->
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!--description & buttons-->>
        <div class="container">
            <div class="position-absolute" style="margin-top: 5%;">
                <div class="col-md-10">
                    <h2>Description</h2>
                    <p>@Model.Description</p>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Category: @Model.TagName </div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Deadline until: @Model.EndDate </div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Goal Amount: @Model.Goal €</div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Progress So Far: @Model.Progress %</div>

                    <div class="progress">
                        <div id="one" class="progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@Math.Round(Model.Progress)" aria-valuemin="0" aria-valuemax="100" style="width:@Math.Round(Model.Progress)%;background-color:#2c4a58;">
                        </div>
                    </div>
                    <label> Choose a Bundle :</label>
                    @foreach (var item in Model.Bundles)
                    {   
                      <h3>@item.Prize € - @item.Description</h3>                     
                    }                 
                   </div>                  
                </div>
            </div>
       

    </main>
    
</div>
