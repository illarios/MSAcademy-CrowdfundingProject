@{
    ViewData["Title"] = "Edit Profile";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>

<div class="container">
    <main>
        <h1>
            Edit my Profile
        </h1>
        <form method="put" class="card p-3 md-light" id="EditProfileForm">
            <div class="form-group">
                <input type="text" id="Id" />
                <label for="username">Username*</label>
                <input type="text" id="username" placeholder="UserName" />
                <div class="valid-feedback"> Looks good! </div>
            </div>
            <div class="form-group">
                <label for="email">Email Address*</label>
                <input type="text" id="email" placeholder="Enter email" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="bio">Bio</label>
                <input type="text" id="bio" rows="3" />
            </div>
            
            <button id="edit-profile" type="button" class="btn btn-dark">Edit Profile</button>
        </form>

        <div id="edit-profile-success" class="alert alert-success" role="alert" style="display: none">
            Successfully Updated Details !
        </div>

    </main>


    <div id="sidebar">
        <a class="nav-link active text-light" asp-area="" asp-controller="Home" asp-action="CreateProfile"><h4>My Profile</h4></a>
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><h4>Create New Project</h4></a>
        <h4>My Projects</h4>
