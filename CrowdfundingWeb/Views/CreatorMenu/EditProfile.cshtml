@model CrowdfundingWeb.Models.CreatorOptionModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Profile";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/Cdashboard.css" />
</head>

<div class="container">
    <main>
        <h1>
            Edit my Profile
        </h1>
        <form method="put" class="card p-3 md-light" id="EditProfileForm">
            <div class="form-group text-center">
                <label for="username">Username*</label>
                <input type="text" id="username" value="@Model.Creatoroptions.Username" readonly />
                <div class="valid-feedback"> Looks good! </div>
            </div>
            <div class="form-group text-center">
                <label for="password">Password*</label>
                <input type="password" id="password" />
            </div>
            <div class="form-group text-center">
                <label for="email">Email Address*</label>
                <input type="text" id="email" value="@Model.Creatoroptions.Email" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group text-center">
                <label for="bio">Biography</label>
                <textarea  type="text" class="form-control" id="bio" placeholder="@Model.Creatoroptions.Bio" rows="3"></textarea>
            </div>

            <button id="edit-profile" type="button" class="btn btn-dark" onclick="this.disabled=true;">Edit Profile</button>
            <button id="delete-profile-creator" type="button" class="btn btn-danger" onclick="this.disabled=true;">Delete Profile</button>

        </form>

        <div id="edit-profile-success" class="alert alert-success" role="alert" style="display: none">
            Successfully Updated Details !
        </div>
        <div id="delete-profile-creator-success" class="alert alert-danger" role="alert" style="display: none">
            Successfully Deleted Profile! We are sorry to see you go!
        </div>

    </main>
     <div class="navbar navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow" id="sidebar">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><h5>Home</h5></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" id="creator-dashboard"><h5>Dashboard</h5></a>
                </li>
                <li class="nav-item">
                    <a id="my-profile" class="nav-link active text-light"><h5>My Profile</h5></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active text-light" asp-area="" asp-controller="CreatorMenu" asp-action="CreatorProjects"><h5>Create New Project</h5></a>
                </li>
                <li class="nav-item">
                    <a id="logout-btn"  class="nav-link text-light" style="display:none"><h5>Logout</h5></a> 
               </li>
            </ul>
        </div>
</div>