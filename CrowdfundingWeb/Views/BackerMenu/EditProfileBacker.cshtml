@model CrowdfundingWeb.Models.BackerOptionModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Profile Backer";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/Bdashboard.css" />
</head>

<div class="container">
    <main>
        <h1>
            Edit my Profile
        </h1>
        <form method="put" class="card p-3 md-light" id="EditProfileForm-Backer">
            <div class="form-group text-center">
                <label for="username">Username*</label>
                <input type="text" id="username" value="@Model.Backeroptions.Username" readonly />
            </div>
            <div class="form-group text-center">
                <label for="password">Password*</label>
                <input type="password" id="password"/>
            </div>
            <div class="form-group text-center">
                <label for="email">Email Address*</label>
                <input type="text" id="email" value="@Model.Backeroptions.Email" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group text-center">
                <label for="wallet">Wallet</label>
                <input type="number" id="wallet" />
            </div>

            <button id="edit-profile-backer" type="button" class="btn btn-dark" onclick="this.disabled=true;">Edit Profile</button>
            <button id="delete-profile-backer" type="button" class="btn btn-danger" onclick="this.disabled=true;">Delete Profile</button>
        </form>

        <div id="edit-profile-backer-success" class="alert alert-success" role="alert" style="display: none">
            Successfully Updated Details !
        </div>
        <div id="delete-profile-backer-success" class="alert alert-danger" role="alert" style="display: none">
            Successfully Deleted Profile! We are sorry to see you go!
        </div>

    </main>


    <div class="navbar" id="sidebar">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-ligh" asp-area="" asp-controller="Home" asp-action="Index"><h4>Home</h4></a>
            </li>
            <li class="nav-item">
                            <a id="my-projects" class="nav-link text-light"><h4>Dashboard</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-light" id="my-profile-backer"><h4>My Profile</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-light" asp-area="" asp-controller="BackerMenu" asp-action="Browseprojects"><h4>Browse New Projects</h4></a>
            </li>
        </ul>
    </div>
</div>