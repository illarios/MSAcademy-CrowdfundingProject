@model CrowdfundingWeb.Models.ProjectWithBundlesModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Browse projects";
}
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/BackerProject.css" />

</head>
<div class="container">
    <main>
        <h1>@Model.Title</h1>
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1" class="active"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="back" src="/uploadedimages/@Model.PicturePath" width="850" height="400" alt="First Image">
                </div>
            </div>

            <!-- Controls -->
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>



        <!--description & buttons-->>
        <div class="container">
            <div class="position-absolute" style="margin-top: 5%;">
                <div class="col-md-4">
                    <h2>Description</h2>
                    <p>@Model.Description</p>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Category: @Model.TagName </div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Deadline until: @Model.EndDate </div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Goal Amount: @Model.Goal €</div>
                    <div class="h5 mb-0 mr-3 font-weight-bold text" style="color:#2c4a58">Progress So Far: @Model.Progress %</div>

                    <div class="progress">
                        <div id="one" class="progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@Model.Progress" aria-valuemin="0" aria-valuemax="100" style="width:@Model.Progress;background-color:#2c4a58;">
                        </div>
                    </div>
                    <label> Choose a Bundle :</label>
                    @foreach (var item in Model.Bundles)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="amountOptions" id="first" value="@item.Prize">
                            <label class="form-check-label" for="option1">@item.Prize € - @item.Description</label>
                        </div>
                    }
                    <div class="form-check" style="padding-bottom: 15px;padding-top: 30px;">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">I agree with the terms and conditions</label>
                    </div>

                    <button id="amount12-btn" type="button" class="btn btn-dark">Support The Project</button>
                    <div id="support-project-success" class="alert alert-success" role="alert" style="display: none">
                        Congratulations you are now funding this project !
                    </div>
                </div>
            </div>
        </div>

    </main>
    <div class="navbar" id="sidebar">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-ligh" asp-area="" asp-controller="Home" asp-action="Index"><h4>Home</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="BackerMenu" asp-action="BDashboard"><h4>Dashboard</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-light" id="my-profile-backer"><h4>My Profile</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link active text-light" asp-area="" asp-controller="BackerMenu" asp-action="Browseprojects"><h4>Browse New Projects</h4></a>
            </li>
        </ul>
    </div>
</div>
